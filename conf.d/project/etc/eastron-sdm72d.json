{
    "name": "afb-modbus",
    "no-ldpaths": true,
    "port": 1234,
    "alias": [
        "/devtools:/usr/share/afb-ui-devtools/binder"
    ],
    "monitoring": true,
    "binding": [
        {
            "reference": "https://xn--stromzhler-v5a.eu/media/pdf/93/17/d7/SDM72DM-V2.pdf",
            "path": "build/src/afb-modbus.so",
            "metadata": {
                "uid": "modbus",
                "version": "1.0",
                "api": "modbus",
                "info": "Generic Eastron default Test Config",
            },
            "modbus": {
                "uid": "Eastron-SDM72D",
                "info": "Three Phase Four Wire Energy Meter ",
                "comment": "afb-binder --name=afb-modbus_eastron --port=1234  --ldpaths=src --workdir=. --verbose --alias=/devtools:/usr/share/afb-ui-devtools/binder",
                "uri": "tty://dev/ttyUSB0:19200",
                "prefix": "SDM72D",
                "slaveid": 1,
                "timeout": 250,
                "autostart": 0,
                "privilege": "Eastron:Modbus",
                "hertz": 10,
                "sensors": [
                    {
                        "uid": "Volts-L1",
                        "register": 0,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD",
                        "sample": [
                            {
                                "action": "read"
                            },
                            {
                                "action": "subscribe"
                            }
                        ]
                    },
                    {
                        "uid": "Volts-L2",
                        "register": 2,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Volts-L3",
                        "register": 4,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Current-L1",
                        "register": 6,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Current-L2",
                        "register": 8,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Current-L3",
                        "register": 10,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Volts-Average",
                        "register": 42,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Current-Average",
                        "register": 76,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Current-Total",
                        "register": 48,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Power-Total",
                        "register": 52,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "Frequency-Supply",
                        "register": 70,
                        "type": "Register_input",
                        "format": "FLOAT_ABCD"
                    },
                    {
                        "uid": "SERIAL-NUMBER",
                        "info": "Device Serial number",
                        "type": "Register_Holding",
                        "format": "UINT32",
                        "register": 64512
                    }
                ]
            }
        }
    ]
}