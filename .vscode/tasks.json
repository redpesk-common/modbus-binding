{
	"version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "locenv",
            "args": ["copen", "make"],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"revealProblems": "always",
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
        }
    ]
}